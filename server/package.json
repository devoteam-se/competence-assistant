{
  "name": "@competence-assistant/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon | pino-pretty --translateTime",
    "migrate": "dbmate --no-dump-schema -d ./src/pkg/db/migrations",
    "build": "tsc -b tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "cli": "ts-node src/cli",
    "lint": "eslint '**/*.ts' .",
    "emulator": "firebase emulators:start --only auth --import firebase/emulator_export",
    "deploy:function": "firebase deploy --only functions",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@competence-assistant/shared": "workspace:*",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "firebase-admin": "12.1.0",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "pino": "^8.21.0",
    "postgres": "3.4.4",
    "zod": "3.23.5"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.4",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.12.8",
    "@types/node-fetch": "2.6.11",
    "@types/pg": "8.11.5",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "commander": "12.0.0",
    "dbmate": "2.15.0",
    "eslint": "8.57.0",
    "firebase": "^10.11.1",
    "firebase-tools": "13.8.0",
    "jest": "29.7.0",
    "node-mocks-http": "1.14.1",
    "nodemon": "3.1.0",
    "pino-pretty": "11.0.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "typescript-eslint": "7.8.0",
    "node-fetch": "^3.3.2"
  }
}
